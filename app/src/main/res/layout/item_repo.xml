<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
                name="item"
                type="com.onuryurtturk.reposita.model.Repo"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <TextView
                android:text="@string/dummy_description"
                android:textSize="@dimen/descriptiontext_size"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/txt_description"
                app:layout_constraintTop_toBottomOf="@+id/txt_repoName"
                app:layout_constraintStart_toEndOf="@+id/img_user"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/img_user"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/dummy_reponame"
                android:textSize="@dimen/repositoryname_text_size"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/txt_repoName"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img_user"
                android:layout_marginStart="16dp" android:layout_marginTop="32dp"/>
        <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp" app:srcCompat="@drawable/ic_starred"
                android:id="@+id/img_fav" app:layout_constraintStart_toEndOf="@+id/img_user"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_description"
                android:layout_marginTop="12dp"/>
        <TextView
                android:text="@string/dummy_starCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_starCount" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_description"
                app:layout_constraintStart_toEndOf="@+id/img_fav"
                android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>